<<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <h2 class="mb-3">投稿詳細</h2>
      <table class="table table-borderless">
        <tr>
          <th>投稿ユーザー</th>
          <td>
            <%= link_to admin_user_path(@post) do %>
              <%= @post.user.first_name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>投稿日</th>
          <td>
            <%= @post.created_at.strftime('%Y/%m/%d') %>
          </td>
        </tr>
        <tr>
          <th>画像</th>
          <td>
            <% if @post.image.attached? %>
              <%= image_tag @post.image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td>
            <%= @post.genre.name %>
          </td>
        </tr>
         <tr>
          <th>タイトル</th>
          <td>
            <%= @post.title %>
          </td>
        </tr>
         <tr>
          <th>投稿内容</th>
          <td>
            <%= @post.introduction %>
          </td>
        </tr>
      </table>
    </div>
  </div>