<<div class="container">
  <div class="row">
    <div class="col-lg-9">
      <h2 class="mb-3">ユーザー投稿詳細</h2>
      <table class="table table-borderless">
        <tr>
          <th>投稿ユーザー</th>
          <td>
            <%= link_to admin_user_path(@post) do %>
              <%= @post.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>投稿日</th>
          <td>
            <%= @post.created_at.strftime('%Y/%m/%d') %>
          </td>
        </tr>
        <tr>
          <th>画像</th>
          <td>
            <% if @post.image.attached? %>
              <%= image_tag @post.image, size: "200x200" %>
            <% else %>
              <%= image_tag 'no_image', size: "200x200" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td>
            <%= @post.genres %>
          </td>
        </tr>
         <tr>
          <th>タイトル</th>
          <td>
            <%= @post.title %>
          </td>
        </tr>
         <tr>
          <th>投稿内容</th>
          <td>
            <%= @post.introduction %>
          </td>
        </tr>
        <tr>
        <div>
            <p>コメント件数：<%= @post.comments.count %></p>
        <% @post.comments.each do |comment| %>
            <p><% if comment.user.image.attached? %></p>
                    <%= image_tag comment.user.image, size: "200x200" %>
                <% else %>
                     <%= image_tag 'no_image', size: "200x200" %>
                <% end %>
            <%= comment.user.name %>
            <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %>
                <%= link_to "削除する", post_comment_path(comment.post_image, post_comment), method: :delete %>
        <% end %>
        </div>
          <!--<td>-->
            <%#= form_with url: edit_admin_post_path(@post), class: "form-inline" do |f| %>
              <%#= f.submit "更新画面へ", class: "btn btn-success mb-2" %>
            <%# end %>
          <!--</td>-->
        </tr>
      </table>
    </div>
  </div>