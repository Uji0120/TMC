<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mb-3">タイムライン</h2>

      <table class="table">
        <thead class="thead-light">
          <tr>
            <th>ユーザー名</th>
            <th>ジャンル名</th>
            <th>タイトル</th>
            <th>記事</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.user.last_name %></td>
              <td><%= post.genre.name %></td>
              <td>
                <%= link_to edit_admin_post_path(post) do %>
                  <%= post.title %>
                  <%#= post.created_at %>
                <% end %>
              </td>
              <td><%= post.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
