<div class="container px-5 px-sm-0">
        <div class="row">
      <!--<div class="col-md-4">-->
        <%#= render 'user/users/user', user: @user, post: @post %>
      <!--</div>-->
      <div class="col-md">
          <h2>投稿</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <th>
                <td>
                  <% if @user.image.attached? %>
                    <%= image_tag user.image, size: "200x200" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "200x200" %>
                  <% end %><br>
                  <%= link_to @user.last_name, edit_admin_user_path(@user.id) %>
                </td>
              </th>
              <tr>
                <th>投稿画像</th>
                <th>タイトル</th>
                <th>投稿内容</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td>
                  <% if post.image.attached? %>
                    <%= image_tag post.image, size: "200x200" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "200x200" %>
                   <% end %>
                </td>
                <td>
                   <p><%= link_to "#{post.comments.count} コメント", post_path(post.id) %></p>
                </td>
                <td>
                  <%= link_to post.title, post_path(post.id) %>
                </td>
                <td>
                  <%= post.introduction %>
                </td>
                <td>
                  <%= link_to '投稿削除',admin_post_path(post.id), method: :delete, class: "btn btn-danger text-white" %>
                </td>
              </tr>
              <% end %>
            </tbody>
            <%#= f.radio_button :is_deleted, true, class: "form-check-input" %>
          </table>
        </div>
    </div>
  </div>
</main>
