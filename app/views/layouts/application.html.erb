<!DOCTYPE html>
<html>
  <head>
    <title>MotoCrew</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <h3 class="logo"><%= link_to "MotoCrew", root_path %></h3>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <p>ようこそ、<%= current_user.first_name %>さん！</p>
                <li>
                  <%= link_to "マイページ", user_path(current_user), class: "btn btn-outline-dark ml-3" %>
                </li>
                <li>
                  <%= link_to "投稿一覧", posts_path, class: "btn btn-outline-dark ml-3" %>
                </li>
                <li>
                  <%= link_to "ユーザー一覧", users_path, class: "btn btn-outline-dark ml-3" %>
                </li>
                <li>
                  <%= link_to "ログアウト",  destroy_user_session_path, method: :delete, class: "btn btn-outline-dark ml-3" %>
                </li>
              <% elsif admin_signed_in? %>
                <li>
                  <%= link_to "投稿一覧", admin_posts_path, class: 'btn btn-outline-dark ml-3' %>
                </li>
                <li>
                  <%= link_to "会員一覧", admin_users_path, class: 'btn btn-outline-dark ml-3' %>
                </li>
                <li>
                  <%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-outline-dark ml-3' %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path , method: :delete, class: 'btn btn-outline-dark ml-3' %>
                </li>
              <% else %>
                <li>
                  <%= link_to "About", about_path, class: "btn btn-outline-dark ml-3" %>
                </li>
                <li>
                  <%= link_to "投稿一覧", posts_path, class: "btn btn-outline-dark ml-3" %>
                </li>
                <li>
                  <%= link_to "新規登録", new_user_registration_path, class: "btn btn-outline-dark ml-3" %>
                </li>
                <li>
                  <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-dark ml-3" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
