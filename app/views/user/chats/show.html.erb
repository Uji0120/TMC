<h1>チャット画面</h1>
    <h2>チャットでユーザー同士交流を深めよう</h2>

<%= form_with model: @chat do |f| %>
    <%= f.text_field :message %>
    <%= f.hidden_field :room_id %>
    <%= f.submit '送信する' %>
<% end %>
<table>
    <thead>
        <tr>
            <td>ユーザー名</td>
            <td>投稿内容</td>
        </tr>
    </thead>
    <tbody>
        <% @chats.each do |chat| %>
            <tr>
                <td><%= chat.user.first_name %></td>
                <td><%= chat.message %></td>
            </tr>
        <% end %>
    </tbody>
</table>
