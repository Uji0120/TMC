<main>
  <% if flash[:notice] %>
    <div class="flash">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-4">
        
        <% if current_user != @user %>
          <%= link_to 'chatを始める', chat_path(@user.id)%>
        <% end %>

        <% if @bookmark_list.present? %>
          <% @bookmark_list.each do |post| %>
            <%= post.title %>
            <%= post.introduction %>
    　    <% end %>
        <% end %>
        
        <%= render 'user/users/user', user: @user, post: @post %>
      </div>
      <div class="col-md-7 offset-md-1">
          <h2>投稿</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>タイトル</th>
                <th>投稿内容</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= image_tag @user.get_image(100,100) %><br>
                  <%= link_to @user.name, user_path(@user.id) %>
                </td>
                <td>
                   <p><%= link_to "#{post.post_comments.count} コメント", post_path(post.id) %></p>
                </td>
                <td>
                  <%= link_to posts.title, post_path(post.id) %>
                </td>
                <td>
                  <%= posts.introduction %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>
  </div>
</main>
