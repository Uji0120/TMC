<h2>会員詳細</h2>
<div>
    <%#= image_tag user.get_user_image(100,100) %>
     <% if user.image.attached? %>
      <%= image_tag user.image, size: "200x200" %>
     <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
     <% end %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>名前</th>
            <th><%= user.last_name + user.first_name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
       <div class="row">
        <%= link_to edit_user_path(user.id),class: "btn btn-outline-secondary btn-block", method: :get do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
        </div>

        <h2 class="mt-3">新規投稿</h2>
          <%= form_with model: post, url: new_post_path, method: :post do |f| %>
            <p>タイトル</p>
              <%= f.text_field :title %>

            <p>記事</p>
              <%= f.text_field :introduction %><br>
              
            <div class="form-group row">
              <%= f.label :image, "画像", class: "col-sm-4 col-form-label mt-3" %>
                <div class="col-sm-8">
                  <div class="custom-file mt-3">
                    <%= f.file_field :image, accept: "image/*" %>
                  </div>
                </div>
            </div><br>
            
            <%= f.submit '新規投稿', class: "btn btn-success text-white mt-3" %>
              
            
          <% end %>
  </div>