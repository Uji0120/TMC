<h2>会員情報</h2>
<div>
    <%#= image_tag user.get_user_image(100,100) %>
     <% if user.image.attached? %>
      <%= image_tag user.image, size: "200x200" %>
     <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
     <% end %>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>名前</th>
            <th><%= user.last_name + user.first_name %></th>
          </tr>
          <tr>
            <th>自己紹介</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(user.id),class: "btn btn-outline-secondary btn-block", method: :get do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <div class="row">
        <%= link_to "投稿する", new_post_path, class: "btn btn-success text-white mt-3", method: :get %>
      </div>
  </div>