<h1>バイク仲間たち</h1>

<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">

        <%= render 'user/users/user', user: @user, post: @post %>
        
      </div>
       <div class="col-md-8 offset-md-1">
        <h2>なかまいちらん</h2>
        <table class="table">
          <thead>
            <tr>
              <th>アイコン</th>
              <th>なまえ</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.image.attached? %>
                  <%= image_tag user.image, size: "200x200" %>
                <% else %>
                  <%= image_tag 'no_image', size: "200x200" %>
                <% end %>
              </td>
              <td>
                <%= user.last_name + user.first_name %>
              </td>
              <td>
                <%= link_to "詳細ページへ", user_path(user.id) %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</main>